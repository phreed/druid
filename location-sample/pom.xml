<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>edu.vanderbilt.isis.druid</groupId>
  <artifactId>local-sample</artifactId>
  <packaging>jar</packaging>
  <version>1.0.0-SNAPSHOT</version>
  <name>build a sample apk from a contract</name>

  <build>
    <plugins>
      <plugin>
        <groupId>edu.vanderbilt.isis.druid</groupId>
        <artifactId>druid-maven-plugin</artifactId>
        <version>2.0.0</version>
        <executions>

          <execution> <!-- AndroidManifest.xml -->
            <id>generate-manifest</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <artifactCoords>edu.vanderbilt.isis.druid:druid-template:2.0.0</artifactCoords>
              <contractFile>${basedir}/src/main/contract/pli.xml</contractFile>
              <templateFile>template/AndroidManifest.stg</templateFile>
              <outputDirectory>${basedir}/target/test-harness/druid-maven-plugin-generate-test/</outputDirectory>
            </configuration>
          </execution>

          <!-- ORM classes  -->
          <execution> <!-- ORM Object Creation Builder(s) -->
            <id>generate-creators</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <artifactCoords>edu.vanderbilt.isis.druid:druid-template:2.0.0</artifactCoords>
              <contractFile>${basedir}/src/main/contract/pli.xml</contractFile>
              <templateFile>template/src/main/java/sponsor/orm/ContractCreator.stg</templateFile>
              <outputDirectory>${basedir}/target/test-harness/druid-maven-plugin-generate-test/</outputDirectory>
              <each>relation</each>
            </configuration>
          </execution>

	  <!-- res/values/ -->	
          <execution> <!-- strings.xml  -->
            <id>generate-res-values-strings-xml</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <artifactCoords>edu.vanderbilt.isis.druid:druid-template:2.0.0</artifactCoords>
              <contractFile>${basedir}/src/main/contract/pli.xml</contractFile>
              <templateFile>template/res/values/strings.stg</templateFile>
              <outputDirectory>${basedir}/target/test-harness/druid-maven-plugin-generate-test/</outputDirectory>
            </configuration>
          </execution>

          <execution> <!-- styles.xml  -->
            <id>generate-res-values-styless-xml</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <artifactCoords>edu.vanderbilt.isis.druid:druid-template:2.0.0</artifactCoords>
              <contractFile>${basedir}/src/main/contract/pli.xml</contractFile>
              <templateFile>template/res/values/styles.stg</templateFile>
              <outputDirectory>${basedir}/target/test-harness/druid-maven-plugin-generate-test/</outputDirectory>
            </configuration>
          </execution>
         
          <execution> <!-- variables.xml  -->
            <id>generate-res-values-variables-xml</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <artifactCoords>edu.vanderbilt.isis.druid:druid-template:2.0.0</artifactCoords>
              <contractFile>${basedir}/src/main/contract/pli.xml</contractFile>
              <templateFile>template/res/values/variables.stg</templateFile>
              <outputDirectory>${basedir}/target/test-harness/druid-maven-plugin-generate-test/</outputDirectory>
            </configuration>
          </execution>

	  <!-- res/xml/ -->	
          <execution> <!-- account-preferences.xml (for conventional SyncAdaptor )  -->
            <id>generate-xml-account-preferences-xml</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <artifactCoords>edu.vanderbilt.isis.druid:druid-template:2.0.0</artifactCoords>
              <contractFile>${basedir}/src/main/contract/pli.xml</contractFile>
              <templateFile>template/res/xml/account_preferences.stg</templateFile>
              <outputDirectory>${basedir}/target/test-harness/druid-maven-plugin-generate-test/</outputDirectory>
            </configuration>
          </execution>

          <execution> <!-- authenticator.xml (for conventional SyncAdaptor )  -->
            <id>generate-xml-authenticator-xml</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <artifactCoords>edu.vanderbilt.isis.druid:druid-template:2.0.0</artifactCoords>
              <contractFile>${basedir}/src/main/contract/pli.xml</contractFile>
              <templateFile>template/res/xml/authenticator.stg</templateFile>
              <outputDirectory>${basedir}/target/test-harness/druid-maven-plugin-generate-test/</outputDirectory>
            </configuration>
          </execution>

          <!-- res/layout -->
          <execution> <!-- Main(s) (holds all the fragments) -->
            <id>generate-res-layout-main.xml</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <artifactCoords>edu.vanderbilt.isis.druid:druid-template:2.0.0</artifactCoords>
              <contractFile>${basedir}/src/main/contract/pli.xml</contractFile>
              <templateFile>template/res/layout/activity_main.stg</templateFile>
              <outputDirectory>${basedir}/target/test-harness/druid-maven-plugin-generate-test/</outputDirectory>
              <each>relation</each>
            </configuration>
          </execution>


          <execution><!-- Listview Fragments Layout(s) -->
            <id>generate-res-layout-listview-xml</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <artifactCoords>edu.vanderbilt.isis.druid:druid-template:2.0.0</artifactCoords>
              <contractFile>${basedir}/src/main/contract/pli.xml</contractFile>
              <templateFile>template/res/layout/contract_listview.stg</templateFile>
              <outputDirectory>${basedir}/target/test-harness/druid-maven-plugin-generate-test/</outputDirectory>
              <each>relation</each>
            </configuration>
          </execution>

          <execution> <!-- Listview custom row layout(s)  -->
            <id>generate-res-layout-listview-custom-row.xml</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <artifactCoords>edu.vanderbilt.isis.druid:druid-template:2.0.0</artifactCoords>
              <contractFile>${basedir}/src/main/contract/pli.xml</contractFile>
              <templateFile>template/res/layout/contract_listview_custom_row.stg</templateFile>
              <outputDirectory>${basedir}/target/test-harness/druid-maven-plugin-generate-test/</outputDirectory>
              <each>relation</each>
            </configuration>
          </execution>

          <execution> <!-- Edit Fragment Layout(s)  -->
            <id>generate-res-layout-edit-fragment.xml</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <artifactCoords>edu.vanderbilt.isis.druid:druid-template:2.0.0</artifactCoords>
              <contractFile>${basedir}/src/main/contract/pli.xml</contractFile>
              <templateFile>template/res/layout/contract_edit_fragment.stg</templateFile>
              <outputDirectory>${basedir}/target/test-harness/druid-maven-plugin-generate-test/</outputDirectory>
              <each>relation</each>
            </configuration>
          </execution>

          <execution> <!-- View Fragment Layout(s)  -->
            <id>generate-res-layout-view-fragment.xml</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <artifactCoords>edu.vanderbilt.isis.druid:druid-template:2.0.0</artifactCoords>
              <contractFile>${basedir}/src/main/contract/pli.xml</contractFile>
              <templateFile>template/res/layout/contract_listview.stg</templateFile>
              <outputDirectory>${basedir}/target/test-harness/druid-maven-plugin-generate-test/</outputDirectory>
              <each>relation</each>
            </configuration>
          </execution>

          <execution> <!-- Create Fragment Layout(s)  -->
            <id>generate-res-layout-create-fragment.xml</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <artifactCoords>edu.vanderbilt.isis.druid:druid-template:2.0.0</artifactCoords>
              <contractFile>${basedir}/src/main/contract/pli.xml</contractFile>
              <templateFile>template/res/layout/template_creation_fragment.stg</templateFile>
              <outputDirectory>${basedir}/target/test-harness/druid-maven-plugin-generate-test/</outputDirectory>
              <each>relation</each>
            </configuration>
          </execution>

        </executions>
      </plugin>

      <plugin>
          <groupId>org.eclipse.m2e</groupId>
          <artifactId>lifecycle-mapping</artifactId>
          <version>1.0.0</version>
          <configuration>
          <lifecycleMappingMetadata>
            <pluginExecutions>

              <pluginExecution>
                <pluginExecutionFilter>
                  <groupId>edu.vanderbilt.isis.druid</groupId>
                  <artifactId>druid-maven-plugin</artifactId>
                  <versionRange>[2.0.0,)</versionRange>
                  <goals>
                    <goal>generate</goal>
                  </goals>
                </pluginExecutionFilter>
                <action>
                  <ignore/>
                </action>
              </pluginExecution>
            </pluginExecutions>
          </lifecycleMappingMetadata>
        </configuration>
      </plugin>

    </plugins>
  </build>
</project>


